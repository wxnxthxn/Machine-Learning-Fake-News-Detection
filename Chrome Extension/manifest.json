{
    "manifest_version": 3,
    "name": "Fake News Checker",
    "version": "1.0",
    "description": "ตรวจสอบข่าวปลอมได้อย่างง่ายดาย",
    "permissions": ["storage", "contextMenus", "tabs"],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": ["http://*/", "https://*/"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon/news16.png",
            "48": "icon/news48.png",
            "128": "icon/news128.png"
        }
    },
    "icons": {
        "16": "icon/news16.png",
        "48": "icon/news48.png",
        "128": "icon/news128.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content_script.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "banner/correct.PNG",
                "banner/warning.PNG",
                "banner/incorrect.PNG"],
            "matches": ["<all_urls>"]
        }
    ]
}