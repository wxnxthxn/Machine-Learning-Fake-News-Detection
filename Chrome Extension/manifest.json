{
    "manifest_version": 3,
    "name": "Fake News Checker",
    "version": "1.0",
    "description": "ตรวจสอบข่าวปลอมได้อย่างง่ายดาย",
    "permissions": ["storage", "contextMenus", "tabs"],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "http://localhost:8000/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content_script.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "banner/correct.PNG",
                "banner/warning.PNG",
                "banner/incorrect.PNG"
            ],
            "matches": ["<all_urls>"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:8000"
    }
}
